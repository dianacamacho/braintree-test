<h1>Jerseys</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Team</th>
      <th>Player</th>
      <th>Number</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jerseys.each do |jersey| %>
      <tr>
        <td><%= jersey.team %></td>
        <td><%= jersey.player %></td>
        <td><%= jersey.number %></td>
        <td><%= number_to_currency(jersey.price) %></td>
        <td><%= link_to 'Show', jersey %></td>
        <td><%= link_to 'Edit', edit_jersey_path(jersey) %></td>
        <td><%= link_to 'Destroy', jersey, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Jersey', new_jersey_path %>
